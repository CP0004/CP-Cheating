<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background_app">

    <ImageView
        android:id="@+id/Log_img_state_log"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_200sdp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_80sdp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_error"
        tools:ignore="ContentDescription" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/Log_tv_state_log"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Log_img_state_log"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/_10ssp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:gravity="center"
        android:textColor="@color/color_text_primary"
        android:textSize="@dimen/_14ssp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_5sdp"
        android:elevation="@null"
        app:cardCornerRadius="@dimen/dimen_radius_card"
        app:cardElevation="@null"
        app:cardMaxElevation="@null">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/color_background_card_sub"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/Log_img_web"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_margin="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_40sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_web"
                app:tint="@color/color_image_primary"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/Log_img_github"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_margin="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_40sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_github"
                app:tint="@color/color_image_primary"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/Log_img_telegram"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_margin="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_40sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_telegram"
                app:tint="@color/color_image_primary"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/Log_img_instagram"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_margin="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_40sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_instagram"
                app:tint="@color/color_image_primary"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/Log_img_tiktok"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_margin="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_40sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_tiktok"
                app:tint="@color/color_image_primary"
                tools:ignore="ContentDescription" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>